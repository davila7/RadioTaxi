@model IEnumerable<DataLayer6.Viaje>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Viajes</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Origen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Km)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            Fecha Inicio
        </th>
        <th>
            Hora Inicio
        </th>
        <th>
            Fecha Termino
        </th>
        <th>
            Hora Termino
        </th>
        <th>
            Cliente
        </th>
        <th>
            Conductor
        </th>
        <th>
           Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Origen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destino)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Km)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ValueFor(modelItem => item.FechaInicio, "{0:dd/MM/yyyy}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraIni)
        </td>
        <td>
            @Html.ValueFor(modelItem => item.FechaTermino, "{0:dd/MM/yyyy}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraTer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conductor.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_viaje }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_viaje })
        </td>
    </tr>
}

</table>
