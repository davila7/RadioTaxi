@model DataLayer6.Reserva

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Reserva</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Reserva)

        <div class="form-group">
            <label class="control-label col-md-2" for="Pasajero">Cliente</label>
            <div class="col-md-10">
                @Html.DropDownList("Cliente_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cliente_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Pasajero">Conductor</label>
            <div class="col-md-10">
                @Html.DropDownList("RutConductor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RutConductor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Pasajero">Patente</label>
            <div class="col-md-10">
                @Html.DropDownList("PatenteVehiculo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PatenteVehiculo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Pasajero">Fecha Viaje</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Fecha_viaje, "{0:yyyy-MM-dd}", new { @class = "form-control datetimepicker" })
                @Html.ValidationMessageFor(model => model.Fecha_viaje, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Pasajero">Origen</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dir_origen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dir_origen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Pasajero">Destino</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dir_destino, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dir_destino, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pendiente, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Pendiente, new[] { new SelectListItem { Text = "Si", Value = "1" }, new SelectListItem { Text = "No", Value = "0" } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Pendiente, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
