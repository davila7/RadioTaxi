            @Html.DisplayFor(modelItem => item.Tarifa.Desc_Tarifa)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_empr }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_empr }) |
